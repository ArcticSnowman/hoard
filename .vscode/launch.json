{
    "version": "0.0.1",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch executable 'hoard'",
            "cargo": {
                "args": [
                    "run",
                    "--bin=hoard",
                    "--package=hoard"
                ],
                "filter": {
                    "name": "hoard",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hoard'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hoard",
                    "--package=hoard"
                ],
                "filter": {
                    "name": "hoard",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'hoard'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hoard",
                    "--package=hoard"
                ],
                "filter": {
                    "name": "hoard",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}